<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_activity_user">

    <ImageView
        android:id="@+id/login_applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/applogo" />


    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_applogo"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/black"
        android:layout_marginRight="15dp"
        android:hint="Phone number"
        android:inputType="number"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/login_password_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textSize="18dp"/>


    <CheckBox
        android:id="@+id/remember_chbx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/login_password_user"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Remember me"
        />
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remember_chbx"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:text="Forgot Password ?"
        android:textSize="20dp"/>
    android:textColor="@android:color/black"

    <Button
        android:id="@+id/login_btn"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="15dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        android:text="login"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_applogo"
        android:layout_marginLeft="160dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:textAllCaps="true"
        android:text="admin" />

    <TextView
        android:id="@+id/not_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:textAllCaps="true"
        android:text="not a admin" />


</RelativeLayout>