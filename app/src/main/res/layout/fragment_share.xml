<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:id="@+id/close"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="Close"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/update"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Update"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                />
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Profile_update_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@android:color/white"
        android:layout_marginTop="90dp"
        app:civ_circle_background_color="@android:color/holo_blue_dark"
        android:src="@drawable/circle" />

    <EditText
        android:id="@+id/phone_update_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Contact Number"
        android:padding="10dp" />
    <EditText
        android:id="@+id/FullName_update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_update_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Full Name"
        android:padding="10dp" />

    <TextView
        android:id="@+id/Edit_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="edit profile"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textAllCaps="true"
        android:padding="10dp" />
    <TextView
        android:id="@+id/upload_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Profile_update_image"
        android:textColor="@android:color/black"
        android:text="Upload profile photo"/>



</RelativeLayout>