<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPayment">

    <TextView
        android:id="@+id/order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/shipmentText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:textAllCaps="true"
        android:text="order id: "
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/order_total_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/order_id"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:text="total price: "
        android:textAllCaps="true"
        android:textSize="24dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payment_recycler_item"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/order_total_payment"
        android:layout_marginTop="30dp"
        android:scrollbars="vertical"

        />

    <Button
        android:id="@+id/Upi_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="100dp"
        android:text="Pay with UPI" />



</RelativeLayout>